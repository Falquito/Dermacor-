// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Paciente {
  idPaciente        Int      @id @default(autoincrement())
  nombrePaciente    String
  apellidoPaciente  String
  telefonoPaciente  String?
  domicilioPaciente String?
  dniPaciente       String   @unique

  fechaNacimiento   DateTime?

  fechaHoraPaciente DateTime @default(now())
  estadoPaciente    Boolean  @default(true)

  // Relaciones
  consultas         Consultas[]
}


model ObraSocial {
  idObraSocial        Int      @id @default(autoincrement())
  nombreObraSocial    String   @unique
  estadoObraSocial    Boolean  @default(true)
  admiteCoseguro      Boolean  @default(false)
  fechaHoraObraSocial DateTime @default(now())

  // Relaciones
  consultas     Consultas[]
  
}

model Coseguro {
  idCoseguro        Int      @id @default(autoincrement())
  nombreCoseguro    String   @unique
  estadoCoseguro    Boolean  @default(true)
  fechaHoraCoseguro DateTime @default(now())

  // Relaciones
  consultas         Consultas[]
}

model Consultas {
  idConsulta                  Int      @id @default(autoincrement())
  motivoConsulta              String
  diagnosticoConsulta         String?
  tratamientoConsulta         String?
  estudiosComplementarios     String?
  fechaHoraConsulta           DateTime @default(now())
  nroAfiliado                String?
  tipoConsulta               String 
  tieneCoseguro              Boolean?
  montoConsulta              Float?

  // FK
  idPaciente    Int
  idObraSocial  Int?
  idCoseguro    Int?

  // Relaciones (1 consulta pertenece a 1 paciente, 1 obra social opcional y 1 coseguro opcional)
  paciente    Paciente   @relation(fields: [idPaciente], references: [idPaciente], onDelete: Restrict)
  obraSocial  ObraSocial? @relation(fields: [idObraSocial], references: [idObraSocial], onDelete: Restrict)
  coseguro    Coseguro?   @relation(fields: [idCoseguro], references: [idCoseguro], onDelete: Restrict)

  @@index([idPaciente])
  @@index([idObraSocial])
  @@index([idCoseguro])
  @@index([idPaciente, fechaHoraConsulta])
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("USER")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  accounts  Account[]
  sessions  Session[]
}


model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
